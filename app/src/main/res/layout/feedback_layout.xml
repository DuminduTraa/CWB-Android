<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#DBDAD6">


    <TextView
        android:text="How would you rate our service?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/textView2" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:progressBackgroundTint="@color/wallet_secondary_text_holo_dark"
        android:progressTint="@android:color/holo_red_light"
        android:secondaryProgressTint="@android:color/holo_red_light"
        android:id="@+id/rating_water"
        android:numStars="5"
        android:rating="0"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/maintenance_logo"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/rating_water"
        android:layout_toLeftOf="@+id/rating_water"
        android:layout_toStartOf="@+id/rating_water" />

    <TextView
        android:text="Technical Issues!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/rating_water"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TELL US MORE.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/feedback_water_logo"
        android:id="@+id/feedback_water"
        android:layout_alignTop="@+id/feedback_coin"
        android:layout_toRightOf="@+id/feedback_coin"
        android:layout_toEndOf="@+id/feedback_coin"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/feedback_iphone_logo"
        android:layout_alignBottom="@+id/feedback_water"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/feedback_iphone" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/feedback_coin_logo"
        android:id="@+id/feedback_coin"
        android:layout_alignTop="@+id/feedback_power"
        android:layout_toRightOf="@+id/feedback_power2"
        android:layout_toEndOf="@+id/feedback_power"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/feedback_power_logo"
        android:id="@+id/feedback_power"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:text="No Power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_power"
        android:layout_alignRight="@+id/feedback_power"
        android:layout_alignEnd="@+id/feedback_power"
        android:layout_marginTop="12dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Can't Insert Coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_toStartOf="@+id/feedback_water"
        android:layout_toLeftOf="@+id/feedback_water"/>

    <TextView
        android:text="No Water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/feedback_water"
        android:layout_alignEnd="@+id/feedback_water"
        android:id="@+id/textView7" />

    <TextView
        android:text="Can't Activate from app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/feedback_iphone"
        android:layout_alignStart="@+id/feedback_iphone" />

    <Button
        android:text="SEND"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_button"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/feedback_send" />


</RelativeLayout>