<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#DBDAD6">


    <TextView
        android:text="How would you rate our service?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/textView2" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:progressBackgroundTint="@color/wallet_secondary_text_holo_dark"
        android:progressTint="@color/colorAccent"
        android:secondaryProgressTint="@color/colorAccent"
        android:id="@+id/rating_water"
        android:numStars="5"
        android:rating="0"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/maintenance_logo"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/rating_water"
        android:layout_toLeftOf="@+id/rating_water"
        android:layout_toStartOf="@+id/rating_water" />

    <TextView
        android:text="Technical Issues!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/rating_water"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TELL US MORE.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />
</RelativeLayout>