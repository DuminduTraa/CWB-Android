<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vacuum_scroll2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mr_dialog_material_background_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mr_dialog_material_background_light"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            tools:text="$1 for 5min" />

        <Button
            android:id="@+id/activate_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:text="ACTIVATE"
            android:textSize="18sp"
            android:textStyle="bold"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/route_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/route_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/feedback_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/feedback_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pre_book_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/feedback_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-book"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lots Current Available"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/no_of_lots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff0000"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="1" />


        <Button
            android:id="@+id/book_lot_button"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_button"
            android:text="BOOK LOT"
            android:textSize="18sp"
            android:textStyle="bold"></Button>

    </LinearLayout>

</ScrollView>