<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/mr_dialog_material_background_light">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/water_indicator"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@android:color/holo_red_light"
                android:layout_margin="5dp"/>
            <View
                android:id="@+id/vacuum_indicator"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@android:color/holo_red_light"
                android:layout_margin="5dp"/>
            <View
                android:id="@+id/jet_indicator"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@android:color/holo_red_light"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_margin="5dp"
                android:text="W"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_margin="5dp"
                android:text="V"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_margin="5dp"
                android:text="J"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/station_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            tools:text="Station Name"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/station_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            tools:text="Station Address" />

    </LinearLayout>

    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        tools:text="distance"
        android:textSize="14sp"
        android:gravity="bottom"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/lots_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textAlignment="textEnd"
        tools:text="lots"
        android:textSize="12sp"
        android:gravity="bottom"
        android:textColor="@android:color/holo_green_light"/>

</LinearLayout>