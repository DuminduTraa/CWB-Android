<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDAD6"
    android:id="@+id/vacuum_scroll2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBDAD6">

    <TextView
        android:text="$1 for 5min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:id="@+id/vacuum_price2" />

    <RelativeLayout
        android:id="@+id/vacuum_activate2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/vacuum_price2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/rectangle_button">


        <TextView
            android:text="ACTIVATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vacuum_route2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_below="@+id/vacuum_activate2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/route_logo"/>
        <TextView
            android:text="Route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vacuum_feedback2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/vacuum_route2"
        android:layout_alignLeft="@+id/vacuum_price2"
        android:layout_alignStart="@+id/vacuum_price2">

        <TextView
            android:text="Feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/feedback_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vacuum_prebook2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/vacuum_feedback2"
        android:layout_alignRight="@+id/vacuum_activate2"
        android:layout_alignEnd="@+id/vacuum_activate2">

        <TextView
            android:text="Prebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/feedback_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:text="Lots Current Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textSize="18dp"
        android:layout_below="@+id/vacuum_feedback2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/num_lots_vacuum2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="11dp" />


    <RelativeLayout
        android:id="@+id/vacuum_booklot2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/rectangle_button"
        android:layout_below="@+id/num_lots_vacuum2"
        android:layout_alignRight="@+id/vacuum_prebook2"
        android:layout_alignEnd="@+id/vacuum_prebook2">


        <TextView
            android:text="BOOK LOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
</RelativeLayout>

</ScrollView>