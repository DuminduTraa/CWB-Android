<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_technical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="14dp">

    <LinearLayout
        android:id="@+id/report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exit_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/exit_icon"
            android:layout_gravity="end"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/maintenance_logo_circle"
            android:layout_margin="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Technical Issue Report"
            android:layout_margin="4dp"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select a Service"
            android:layout_marginTop="26dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="26dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/technical_water_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jet_logo_colored"
                    android:background="@drawable/circle_button"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/water_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/technical_vacuum_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jet_logo_colored"
                    android:background="@drawable/circle_button"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/vacuum_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacuum"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/technical_jet_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jet_logo_colored"
                    android:background="@drawable/circle_button"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/jet_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jet"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

         </LinearLayout>


        <LinearLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="26dp"/>

        <Button
            android:text="SEND"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_button_grey"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/technical_report_send"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>