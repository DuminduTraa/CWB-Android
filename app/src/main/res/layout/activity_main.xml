<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.dumindudulanga.cwb.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/list_view_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_button"
            android:text = "Station Details"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/map_view_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_button"
            android:text = "map view"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/account_settings_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_button"
            android:text = "account settings"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/about_us_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_button"
            android:text = "about us"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_button"
            android:text = "log out"
            android:textAllCaps="true" />
    </LinearLayout>
</LinearLayout>
